
import java.time.*;

public class Contacto {

    private String nombre;
    private int telefono;
    private static LocalDate fecha_nac;
    private final static LocalDate FEHCAMIN = LocalDate.of(1920, 1, 1);

    public Contacto(String n, int t, int d, int m, int a) {
        if (n == null) {
            nombre = "";
        } else {
            nombre = n;
        }
        if (t >= 0) {
            telefono = t;
        }
        if (a > 1920 && a < 2026 && m <= 12 && m >= 1 && d <= 31 && d > 0) {
            fecha_nac = LocalDate.of(a, m, d);
        }
    }

    public String getNombre() {
        return nombre;
    }

    public int getTelefono() {
        return telefono;
    }

    public void setNombre(String n) {
        if (n == null) {
            nombre = "";
        } else {
            nombre = n;
        }
    }

    public void setTelefono(int t) {
        if (t >= 0) {
            telefono = t;
        }
    }

    @Override
    public String toString() {
        String aux = "Nombre: " + nombre + "\tTelefono: " + telefono + "\t";
        if (fecha_nac != null) {
            return aux + fecha_nac+" \n";
        }
        return aux;
    }

    @Override
    public boolean equals(Object o) {
        if (this == o) {
            return true;
        }
        if (o == null) {
            return false;
        }
        if (getClass() != o.getClass()) {
            return false;
        }
        Contacto c = (Contacto) o;
        return c.getNombre().equals(this.nombre);
    }
}
